                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCNoOfEmployee"
                        style="@style/defaultTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:gravity="end"
                        android:text="@string/number_of_employee"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/inter_semi_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvCNoOfDirectors"
                        app:layout_constraintTop_toBottomOf="@+id/etSellerCompanyWebsite" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etSellerCompanyNoOfEmployee"
                        style="@style/editTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:hint="1"
                        android:inputType="number"
                        android:singleLine="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/etSellerCompanyNoOfDirectors"
                        app:layout_constraintTop_toBottomOf="@+id/tvCNoOfEmployee" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCStatus"
                        style="@style/defaultTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/company_status"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/inter_semi_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etSellerCompanyNoOfDirectors" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCompanyStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCStatus" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCPurposeBuying"
                        style="@style/defaultTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/per_year_purpose_buying_from_emines"
                        android:textSize="@dimen/_10ssp"
                        app:fontFamily="@font/inter_semi_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rvCompanyStatus" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etSellerCompanyPurposeBuyingMT"
                        style="@style/editTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:gravity="center"
                        android:hint="@string/mt"
                        android:inputType="number"
                        android:singleLine="true"

                        app:layout_constraintEnd_toStartOf="@+id/etSellerCompanyPurposeBuyingValue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCPurposeBuying" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etSellerCompanyPurposeBuyingValue"
                        style="@style/editTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:hint="@string/value"
                        android:inputType="number"
                        android:singleLine="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/etSellerCompanyPurposeBuyingMT"
                        app:layout_constraintTop_toBottomOf="@+id/tvCPurposeBuying" />

-->

                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/rlAddressBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <include
                android:id="@+id/bottomButtons"
                layout="@layout/layout_bottom_two_btn" />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>