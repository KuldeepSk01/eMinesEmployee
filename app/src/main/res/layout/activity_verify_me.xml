<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/nSVOTP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollIndicators="none"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".screen.verifyme.VerifyMeActivity">
                <RelativeLayout
                    android:id="@+id/rlToolbarVerifyMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <include android:id="@+id/toolbarVerifyMe"
                        layout="@layout/layout_custom_toolbar"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlVerifyProfileImg"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:padding="@dimen/_15sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/verify_profile_outline"
                    app:layout_constraintTop_toBottomOf="@+id/rlToolbarVerifyMe"
                    android:layout_marginTop="@dimen/_50sdp"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.cardview.widget.CardView
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/_100sdp"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_200sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivVerifyImg1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvVerifyProfileTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextStyle4"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/rlVerifyProfileImg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvVerifyProfileConfirmBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/defaultBtnStyle"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_100sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvVerifyProfileTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/confirm"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvVerifyProfileNotMeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/defaultBtnStyle"
                    android:gravity="center"
                    android:background="@drawable/default_btn_drawable2"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvVerifyProfileConfirmBtn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/not_me"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </ScrollView>

</layout>